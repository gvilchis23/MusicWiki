<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/tw__solid_white</item>
        <item name="colorControlNormal">@color/tw__solid_white</item>
        <item name="colorControlActivated">@color/tw__solid_white</item>
        <item name="colorControlHighlight">@color/tw__solid_white</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
